<section class="main" id="create">
    <div class="message">
        <h3>Create a new support link.</h3>
        <p>Provide information below to generate a support link.</p>
        <form>
            <ul id="create_form">
                <li class="left">
                    <label for="bs_from_name">Client Name</label>
                    <input type="text" id="bs_from_name" name="bs_from_name" value="Chris Everson" placeholder="Client Name">
                </li>
                <li class="left">
                    <label for="bs_from_email">Client Email</label>
                    <input type="text" id="bs_from_email" name="bs_from_email" value="chris@chriseverson.net" placeholder="Client Email">
                </li>
                <li class="full">
                    <label for="bs_to_additional">Additional Recipients</label>
                    <input type="text" class="bs_to_email" placeholder="Additional Recipient Email">
                </li>
                <li class="addmore">
                    <div class="info">
                        Support link results are always sent to web@primergrey.com. You can <a href="#">add additional recipients</a> if needed.
                    </div>
                </li>
                <li class="submit">
                    <input type="submit" value="Generate Link">
                </li>
            </li>
        </form>
    </div>
</section>